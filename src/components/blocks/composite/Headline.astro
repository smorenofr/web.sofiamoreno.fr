---
import type { HeadlineProps } from '~/types/headline.types';
import { cn } from '~/utils/styles';

type Props = HeadlineProps;

const {
  tagline,
  title,
  subtitle,
  taglineClass = '',
  titleClass = '',
  subtitleClass = '',
  class: className = '',
  align = 'left',
} = Astro.props;

const alignmentClass = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right',
}[align];

const finalTaglineClass = cn(
  'text-secondary text-sm font-semibold uppercase tracking-wider',
  taglineClass
);

const finalTitleClass = cn(
  'text-normal font-title text-4xl md:text-5xl font-bold mt-2',
  titleClass
);

const finalSubtitleClass = cn(
  'text-muted text-lg mt-4 max-w-3xl',
  align === 'center' && 'mx-auto',
  align === 'right' && 'ml-auto',
  subtitleClass
);
---

<div class:list={['space-y-2', alignmentClass, className]}>
  {tagline && <p class={finalTaglineClass}>{tagline}</p>}
  <h1 class={finalTitleClass}>{title}</h1>
  {subtitle && <p class={finalSubtitleClass}>{subtitle}</p>}
</div>
