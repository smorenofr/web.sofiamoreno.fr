---
import merge from 'lodash.merge';
import Container from './Container.astro';
import type { ContainerProps, TwoColumnContainerProps } from '~/types/container.types';
import { cn } from '~/utils/styles';

type Props = TwoColumnContainerProps;

const {
  gap = 'normal',
  responsive = false,
  breakpoint = 'md:',
  reverseOnMobile = false,
  leftColumn,
  rightColumn,
  ...containerProps
} = Astro.props;

const gapSettings = {
  none: '',
  tight: 'gap-3 md:gap-4 lg:gap-6',
  normal: 'gap-4 md:gap-6 lg:gap-8',
  loose: 'gap-6 md:gap-8 lg:gap-12',
};

// Build grid classes
const layoutClass = cn(
  responsive ? `grid-cols-1 ${breakpoint}grid-cols-2` : 'grid-cols-2',
  gapSettings[gap]
);

// Handle reverse order on mobile
const column1Class = cn(
  reverseOnMobile && responsive && `${breakpoint}order-1 order-2`,
  leftColumn?.background?.class,
  leftColumn?.spacing?.padding,
  leftColumn?.spacing?.margin,
  leftColumn?.border?.width,
  leftColumn?.border?.color,
  leftColumn?.border?.radius,
  leftColumn?.class
);
const column2Class = cn(
  reverseOnMobile && responsive && `${breakpoint}order-2 order-1`,
  rightColumn?.background?.class,
  rightColumn?.spacing?.padding,
  rightColumn?.spacing?.margin,
  rightColumn?.border?.width,
  rightColumn?.border?.color,
  rightColumn?.border?.radius,
  rightColumn?.class
);

const defaultContainer = {
  htmlTag: 'div',
  content: { air: 'none', widthType: 'full' },
  layout: { type: 'grid', class: layoutClass },
  printDebug: true,
} as ContainerProps;

const mergedContainerProps = merge({}, defaultContainer, containerProps);
---

<Container {...mergedContainerProps}>
  <div class={column1Class}>
    <slot name="left" />
  </div>
  <div class={column2Class}>
    <slot name="right" />
  </div>
</Container>
