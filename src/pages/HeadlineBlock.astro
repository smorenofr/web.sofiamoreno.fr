---
import Layout from '~/layouts/Layout.astro';
import Container from '~/components/blocks/composite/Container.astro';
import Headline from '~/components/blocks/composite/Headline.astro';

const metadata = {
  title: {
    default: 'Headline Component - Demo',
  },
  description: 'Headline component with tagline, title, and subtitle',
};
---

<Layout metadata={metadata}>
  <div class="container mx-auto px-4 py-12 space-y-24">
    <div>
      <h2 class="text-3xl font-bold mb-8">Headline Component Examples</h2>
      <p class="text-gray-600 mb-12">
        A flexible headline component with tagline, title, and subtitle support.
      </p>
    </div>

    <!-- Example 1: Complete Headline (Left Aligned) -->
    <section>
      <h3 class="text-xl font-semibold mb-6 text-gray-700">1. Complete Headline (Left Aligned)</h3>
      <Container
        containerClass="border-2 border-dashed border-gray-300"
        content={{ spacing: { padding: 'p-8' } }}
      >
        <Headline
          tagline="COMPONENTS"
          title="Astro + Tailwind CSS Components"
          subtitle="A collection of reusable components for building modern websites with Astro and Tailwind CSS."
          align="left"
        />
      </Container>
    </section>

    <!-- Example 2: Center Aligned -->
    <section>
      <h3 class="text-xl font-semibold mb-6 text-gray-700">2. Center Aligned</h3>
      <Container
        containerClass="border-2 border-dashed border-gray-300"
        content={{ spacing: { padding: 'p-8' } }}
      >
        <Headline
          tagline="WELCOME"
          title="Build Amazing Websites"
          subtitle="Create stunning, fast, and accessible web experiences with modern tools and best practices."
          align="center"
        />
      </Container>
    </section>

    <!-- Example 3: Right Aligned -->
    <section>
      <h3 class="text-xl font-semibold mb-6 text-gray-700">3. Right Aligned</h3>
      <Container
        containerClass="border-2 border-dashed border-gray-300"
        content={{ spacing: { padding: 'p-8' } }}
      >
        <Headline
          tagline="GET STARTED"
          title="Ready to Launch?"
          subtitle="Everything you need to build and deploy your next project."
          align="right"
        />
      </Container>
    </section>

    <!-- Example 4: Title Only -->
    <section>
      <h3 class="text-xl font-semibold mb-6 text-gray-700">4. Title Only</h3>
      <Container
        containerClass="border-2 border-dashed border-gray-300"
        content={{ spacing: { padding: 'p-8' } }}
      >
        <Headline title="Simple Headline Without Extras" />
      </Container>
    </section>

    <!-- Example 5: Title + Subtitle (No Tagline) -->
    <section>
      <h3 class="text-xl font-semibold mb-6 text-gray-700">5. Title + Subtitle (No Tagline)</h3>
      <Container
        containerClass="border-2 border-dashed border-gray-300"
        content={{ spacing: { padding: 'p-8' } }}
      >
        <Headline
          title="Focus on What Matters"
          subtitle="Build products that users love without worrying about the technical details."
        />
      </Container>
    </section>

    <!-- Example 6: Custom Styling -->
    <section>
      <h3 class="text-xl font-semibold mb-6 text-gray-700">6. Custom Styling</h3>
      <Container
        containerClass="border-2 border-dashed border-gray-300 bg-linear-to-r from-blue-50 to-purple-50"
        content={{ spacing: { padding: 'p-8' } }}
      >
        <Headline
          tagline="PREMIUM"
          title="Customized Design"
          subtitle="Override default styles with your own classes for complete control."
          taglineClass="text-xs font-bold uppercase tracking-widest text-blue-600"
          titleClass="text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-purple-600"
          subtitleClass="text-xl text-gray-700 mt-6 max-w-2xl"
          align="center"
        />
      </Container>
    </section>

    <!-- Example 7: Dark Background -->
    <section>
      <h3 class="text-xl font-semibold mb-6 text-gray-700">7. Dark Background</h3>
      <Container
        containerClass="border-2 border-dashed border-gray-300 bg-gray-900"
        content={{ spacing: { padding: 'p-8' } }}
      >
        <Headline
          tagline="INNOVATION"
          title="Built for the Future"
          subtitle="Next-generation tools for next-generation developers."
          taglineClass="text-sm font-semibold uppercase tracking-wider text-blue-400"
          titleClass="text-4xl md:text-5xl font-bold text-white mt-2"
          subtitleClass="text-lg text-gray-300 mt-4 max-w-3xl"
          align="center"
        />
      </Container>
    </section>

    <!-- Example 8: Compact Version -->
    <section>
      <h3 class="text-xl font-semibold mb-6 text-gray-700">8. Compact Version</h3>
      <Container
        containerClass="border-2 border-dashed border-gray-300"
        content={{ spacing: { padding: 'p-8' } }}
      >
        <Headline
          tagline="NEW"
          title="Quick Announcement"
          subtitle="Short and sweet message for your users."
          taglineClass="text-xs font-bold uppercase text-green-600"
          titleClass="text-2xl font-bold text-gray-900"
          subtitleClass="text-base text-gray-600 mt-2"
        />
      </Container>
    </section>
  </div>
</Layout>
