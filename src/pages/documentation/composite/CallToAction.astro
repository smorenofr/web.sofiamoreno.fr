---
import Layout from '../_layouts/DocumentationLayout.astro';
import CallToActionBlock from '~/components/blocks/composite/CallToAction.astro';

const metadata = {
  title: {
    default: 'Call To Action',
  },
};
---

<Layout
  metadata={metadata}
  headline={{
    tagline: 'Composite',
    title: 'Call To Action',
    subtitle: 'Showcase of the CallToAction composite block with various configurations',
  }}
>
  <CallToActionBlock
    headline={{
      tagline: 'Call to Action',
      title: 'Astro + Tailwind CSS',
      subtitle:
        "Be very surprised by these huge fake numbers you are seeing on this page. Don't waste more time!",
      align: 'center',
    }}
    actions={[
      {
        label: 'Get template',
        icon: { name: 'heroicons:arrow-down-tray' },
        intent: 'primary',
        size: 'lg',
        variant: 'solid',
        shape: 'pill',
      },
      {
        label: 'Subscribe Now',
        icon: { name: 'heroicons:arrow-top-right-on-square' },
        intent: 'secondary',
        size: 'lg',
        variant: 'solid',
        shape: 'pill',
        iconPosition: 'right',
      },
    ]}
  />
</Layout>
