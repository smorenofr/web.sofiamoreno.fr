---
import ThreeColumnContainer from '~/components/blocks/layouts/ThreeColumnContainer.astro';
import Layout from '../layouts/Layout.astro';

var metadata = {
  title: {
    default: 'Three Column Container',
  },
  description: 'Three Column Container Block - Equal 1/3 split layout',
};
---

<Layout metadata={metadata}>
  <h1 class="text-2xl font-bold mb-6">Three Column Container Block</h1>
  <p class="mb-8">
    A pre-built layout wrapper for three equal columns. Perfect for features, services, or card
    layouts.
  </p>

  <h2 class="text-3xl font-bold mt-12 mb-4">Basic Examples</h2>

  <h3 class="text-xl font-semibold mt-8 mb-2">1. Basic Three Column Layout</h3>
  <ThreeColumnContainer
    htmlTag="section"
    containerWidthType="full"
    content={{
      widthType: 'boxed',
      spacing: { padding: 'py-8' },
      border: { width: 'border', color: 'border-border-emphasis border-dotted' },
    }}
    border={{ width: 'border', color: 'border-border' }}
    spacing={{ margin: 'mb-8' }}
  >
    <div slot="column1" class="bg-blue text-white p-6 rounded text-center">
      <h3 class="text-xl font-bold mb-2">Column 1</h3>
      <p>First column content.</p>
    </div>
    <div slot="column2" class="bg-green text-white p-6 rounded text-center">
      <h3 class="text-xl font-bold mb-2">Column 2</h3>
      <p>Second column content.</p>
    </div>
    <div slot="column3" class="bg-mauve text-white p-6 rounded text-center">
      <h3 class="text-xl font-bold mb-2">Column 3</h3>
      <p>Third column content.</p>
    </div>
  </ThreeColumnContainer>

  <h3 class="text-xl font-semibold mt-8 mb-2">2. Feature Cards</h3>
