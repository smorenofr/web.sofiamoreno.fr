---
import Container from '~/components/blocks/Container.astro';
import Layout from '../layouts/Layout.astro';

var metadata = {
  title: {
    default: 'Home',
  },
  description: 'Welcome to Astro Blocks - Modern components for the web',
};
---

<Layout metadata={metadata}>
  <Container as="section" containerWidthType="boxed" className="border border-red-500">
    <p>This is content inside a Container component.</p>
  </Container>
</Layout>
